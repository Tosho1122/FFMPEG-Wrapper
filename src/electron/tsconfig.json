{
 "compilerOptions": {
   // require strict types (null-save)
   "strict": true,
   // tell TypeScript to generate CommonJS for Electron compatibility
   "target": "ES2020",
   // tell TypeScript to generate CommonJS
   "module": "CommonJS",
   // define where to put generated JS
   "outDir": "../../dist-electron",
   // ignore errors from dependencies
   "skipLibCheck": true,
   // allow synthetic default imports
   "allowSyntheticDefaultImports": true,
   // enable ES module interop
   "esModuleInterop": true
 }
}
{
  "appId": "com.t-Osho.FFMPEG-Wrapper",
  "files": ["dist-electron", "dist-react"],
  "icon":"./ffmpegwrapper.png",
  "extraResources": [
    {
      "from": "node_modules/ffmpeg-static",
      "to": "ffmpeg-static",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": "dmg",
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ]
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility",
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ]
  },
  "win": {
    "target": ["portable", "msi"],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ]
  }
}